.present
  %h1= t('.latest')
  = link_to image_tag(@doc.project1.picture.url), @doc.project1 if @doc.project1
  .clear
  = link_to image_tag(@doc.project2.picture.url), @doc.project2 if @doc.project2
  .clear
  = link_to image_tag(@doc.project3.picture.url), @doc.project3 if @doc.project3

.left_column
  - if @doc.section('left_column').try(:picture)
    = image_tag @doc.section('left_column').picture.url, class: 'bg'


.right_column
  %ul
    - @news_list.each do |news|
      %li
        %p
          = image_tag image_url(news.picture.item.url)
          %span.event_date= link_to l(news.created_at.to_date), "#{ news_index_path }#id#{ news.id }"
          %br
          = raw news.intro
        .clear


